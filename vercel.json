{
  "functions": {
    "api/generate-tips.js": { "maxDuration": 60 },
    "api/cron-tasks.js": { "maxDuration": 60 }
  },
  "outputDirectory": "public",
  "headers": [
    {
      "source": "/api/(generate-tips|cron-tasks|billing|stripe-webhook|tips|telegram|user-settings|user-bets|betting-slips)",
      "headers": [{ "key": "Cache-Control", "value": "no-store" }]
    },
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" }
      ]
    }
  ]
}
